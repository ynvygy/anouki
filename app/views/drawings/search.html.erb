<div class="indent50">
	<h4>Drawings</h4>

	<div class="imageimpr transitions-enabled container">
	<% @drawings.each do |drawing| %>
		<div class="floatstyle">
		<div class="box panel panel-default">
			<%= link_to image_tag(drawing.image.url(:medium)),drawing %>
		</div>
		<div class="panel-body">
		<h5><%=drawing.name%></h5>
		<h5><%=drawing.description%></h5>
		</div>
		<h5><%= link_to "Edit", edit_drawing_path(drawing) %></h5>
		<h5><%= link_to "Delete", drawing, method: :delete, data: { confirm: 'Are you sure?', class:"button" } %></h5>
		</div>
	<% end %>
	</div>
	<%if user_signed_in? && current_user.admin %>
		<%= render "form" %>
	<%end%>
</div>
